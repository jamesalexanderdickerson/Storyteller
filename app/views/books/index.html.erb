<nav>
	<ul id="nav">
		<li><a href="http://localhost:3000/home/show"><%= image_tag @user.image %></a></li>
		<li><span class="logo">Storyteller</span></li>
    <li>
  <div class="container-1">

      <%= form_tag(books_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "box", placeholder: "Search Books" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
           of using a Rails form helper -->
      <span class="icon"><i class="fa fa-search"></i></span>
    </div>

  </div>
  <% end %></li>
	</ul>
</nav>

<% if @books.present? %>
<div id="listing_wrapper">
  <h1>Book Listings</h1>

      <% @books.group(:title).each do |book| %>
      <div class="book_tab">
          <%= book.title %><br>
          By <%= book.author %><br><br>
          <%= link_to image_tag(book.image, :class => "book_img"), book %><br>
        </div>
      <% end %>
  <br>
</div>
<% else %>
<div id="listing_wrapper">
  <p style="font-size: 1em;">There are no books containing the term(s) <%= params[:search] %>.</p>
</div>
<% end %>
